<?xml version="1.0" encoding="UTF-8"?>
<configs>
  <remove xpath="/windows/window[@name='windowBackpack']" />
  <!-- Adjust the looting window size. -->
  <set xpath="/windows/window[@name='windowLooting']/rect[@name='content']/grid[@depth='12' and @rows='10']/@rows">15</set>

  <!-- Replace the original backpack window with the larger one. -->
  <append xpath="/windows">
    <window name="windowBackpack" width="915" height="365" pos="0,15" panel="Center" controller="BackpackWindow" cursor_area="true">
      <panel name="header" height="43" depth="1" backgroundspritename="ui_game_panel_header">
        <!-- Header display and titlebar. -->
        <button depth="3" name="btnSort" style="icon32px, press, hover" pivot="center" pos="21,-21" sprite="ui_game_symbol_backpack" tooltip_key="lblSortInventory" sound="[paging_click]" />
        <label depth="3" name="windowName" pos="42,-6" width="250" height="32" text="INVENTORY" text_key="xuiInventory" font_size="32" />
        <button depth="3" name="btnClearInventory" style="icon32px, press, hover" pivot="center" pos="281,-21" sprite="ui_game_symbol_trash" tooltip_key="lblClearInventory" sound="[paging_click]" />
        <!-- Money/dukes display. -->
        <label depth="2" pos="472,-8" width="100" height="28" text="{currencyamount}" color="[mediumGrey]" justify="right" />
        <sprite depth="4" name="costIcon" sprite="ui_game_symbol_coin" size="24,24" pos="577,-10" color="[white]" foregroundlayer="true" />
      </panel>
      <panel name="content" height="365" depth="0" pos="0,-46" disableautobackground="true">
        <sprite name="background" color="[black]" type="sliced" globalopacity="true" />
        <sprite depth="8" name="backgroundMain" sprite="menu_empty2px" width="915" height="365" color="[black_half_alpha]" type="sliced" fillcenter="true" on_press="true" />
        <grid depth="1" name="inventory" rows="6" cols="15" pos="2,-2" cell_width="61" cell_height="61" controller="Backpack" repeat_content="true">
          <KrampusMod_Backpack_ItemStack name="0" />
        </grid>
      </panel>
    </window>
  </append>
</configs>
