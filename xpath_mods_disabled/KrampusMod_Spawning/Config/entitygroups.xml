<?xml version="1.0" encoding="UTF-8"?>
<configs>
  <!-- Remove demolition zombies from the feral horde stages! Will add back later some other way.. -->
  <remove xpath="/entitygroups/entitygroup[starts-with(@name, 'feralHordeStageGS')]/entity[@name='zombieDemolition']" />

  <!-- Extra strippers. -->
  <set xpath="/entitygroups/entitygroup[@name='ZombiesAll']/entity[@name='zombieStripper']/@prob">0.4</set>

  <!-- Reduce utility worker zombies in general population. -->
  <set xpath="/entitygroups/entitygroup[@name='ZombiesAll']/entity[@name='zombieUtilityWorker']/@prob">0.1</set>

  <!-- Reduce fat tourists in general population. -->
  <set xpath="/entitygroups/entitygroup[@name='ZombiesAll']/entity[@name='zombieFatHawaiian']/@prob">0.2</set>

  <!-- Less of these guys, let them spawn in sleeper cells -->
  <remove xpath="/entitygroups/entitygroup[@name='ZombiesAll']/entity[@name='zombieSteveCrawler']" />

  <!-- Add hazmat zombies to the general population. -->
  <append xpath="/entitygroups/entitygroup[@name='ZombiesAll']">
    <entity name="zombieMaleHazmat" prob="0.2" />
  </append>

  <!-- Add cop zombies to the general population. -->
  <append xpath="/entitygroups/entitygroup[@name='ZombiesAll']">
    <entity name="zombieFatCop" prob="0.15" />
  </append>

  <!-- Adjust default animals. -->
  <set xpath="/entitygroups/entitygroup[@name='AnimalsAll']/entity[@name='animalStag']/@prob">0.3</set>
  <set xpath="/entitygroups/entitygroup[@name='AnimalsAll']/entity[@name='animalDoe']/@prob">0.65</set>
  <set xpath="/entitygroups/entitygroup[@name='AnimalsAll']/entity[@name='animalDireWolf']/@prob">0.15</set>
  <set xpath="/entitygroups/entitygroup[@name='AnimalsAll']/entity[@name='animalBear']/@prob">0.15</set>
  <append xpath="/entitygroups/entitygroup[@name='AnimalsAll']">
    <entity name="animalMountainLion" prob="0.2" />
    <!-- add the new mountain lions to occur in animals group. -->
  </append>

  <!-- No vultures, they suck. -->
  <remove xpath="/entitygroups/entitygroup[@name='AnimalsAll']/entity[@name='animalZombieVulture']" />
  <remove xpath="/entitygroups/entitygroup[@name='VultureGroup']/entity[@name='animalZombieVulture']" />
  <remove xpath="/entitygroups/entitygroup[@name='EnemyAnimalsPlains']/entity[@name='animalZombieVulture']" />
  <remove xpath="/entitygroups/entitygroup[@name='EnemyAnimalsDesert']/entity[@name='animalZombieVulture']" />
  <remove xpath="/entitygroups/entitygroup[@name='EnemyAnimalsBurntForest']/entity[@name='animalZombieVulture']" />
  <!-- <remove xpath="/entitygroups/entitygroup[@name='ZombiesWastelandNight']/entity[@name='animalZombieVulture']" /> -->
  <remove xpath="/entitygroups/entitygroup[@name='ZombiesWastelandNight']/entity[@name='animalZombieVultureRadiated']" />
  <!-- <remove xpath="/entitygroups/entitygroup[@name='ZombiesWastelandNightNoBears']/entity[@name='animalZombieVulture']" /> -->
  <remove xpath="/entitygroups/entitygroup[@name='ZombiesWastelandNightNoBears']/entity[@name='animalZombieVultureRadiated']" />
  <!-- <remove xpath="/entitygroups/entitygroup[@name='ZombiesWastelandNight2']/entity[@name='animalZombieVulture']" /> -->
  <remove xpath="/entitygroups/entitygroup[@name='ZombiesWastelandNight2']/entity[@name='animalZombieVultureRadiated']" />

  <!-- Replace vultures with crawlers. -->
  <append xpath="/entitygroups/entitygroup[@name='VultureGroup']">
    <entity name="zombieSteveCrawler" />
  </append>

  <!-- Make scouts a bit more fun. -->
  <!-- <append xpath="/entitygroups/entitygroup[@name='ZombieScouts']">
    <entity name="zombieWightFeral" prob="0.2"/>
    <entity name="zombieFatCop" prob="0.1" />
  </append> -->

  <!-- Increase wolves and bears in the snow. -->
  <set xpath="/entitygroups/entitygroup[@name='EnemyAnimalsSnow']/entity[@name='animalMountainLion']/@prob">0.8</set>
  <set xpath="/entitygroups/entitygroup[@name='EnemyAnimalsSnow']/entity[@name='animalDireWolf']/@prob">0.15</set>
  <set xpath="/entitygroups/entitygroup[@name='EnemyAnimalsSnow']/entity[@name='animalBear']/@prob">0.2</set>

  <!-- More bears in the burnt forest. -->
  <set xpath="/entitygroups/entitygroup[@name='EnemyAnimalsBurntForest']/entity[@name='animalZombieBear']/@prob">0.3</set>
</configs>
