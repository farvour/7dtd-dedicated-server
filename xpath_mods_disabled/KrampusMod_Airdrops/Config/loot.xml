<?xml version="1.0" encoding="UTF-8"?>
<configs>
  <!-- Make airdrops useful. -->
  <insertAfter xpath="/lootcontainers/lootgroup[@name='groupAmmoRegular']">
    <lootgroup name="ammoKrampusBonus" count="1">
      <item name="ammoShotgunShell" count="10,30" />
      <item name="ammoShotgunSlug" count="10,20" prob="0.4" />
      <item name="ammo9mmBulletBall" count="10,60" prob="1.5" />
      <item name="ammo762mmBulletBall" count="10,60" />
      <item name="ammo44MagnumBulletBall" count="6,24" prob="0.4" />
      <item name="ammoArrowSteelAP" count="10,32" prob="0.1" />
      <item name="ammoCrossbowBoltSteelAP" count="10,32" prob="0.1" />
    </lootgroup>

    <lootgroup name="krampusSupplyCrateOres" count="1">
      <item name="resourceScrapIron" count="1600,2000" />
      <item name="resourcePotassiumNitratePowder" count="200,500" prob="0.7" />
      <item name="resourceCoal" count="200,500" prob="0.7" />
      <item name="resourceOilShale" count="200,500" prob="0.4" />
    </lootgroup>
  </insertAfter>

  <set xpath="/lootcontainers/lootcontainer[@id='34']/@count">8,12</set>
  <!-- <remove xpath="/lootcontainers/lootcontainer[@id='34']/item[@group='cannedfood']" /> -->
  <insertBefore xpath="/lootcontainers/lootcontainer[@id='34']/item[@group='rareBooks']">
    <item group="ammoKrampusBonus" count="4,5" />
    <item group="krampusSupplyCrateOres" count="3,4" prob="0.8" />
    <item name="resourceGlue" count="1,5" prob="0.2" />
    <item name="casinoCoin" count="1000,2500" />
  </insertBefore>
</configs>
