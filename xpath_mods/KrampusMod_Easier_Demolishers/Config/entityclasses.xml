<?xml version="1.0" encoding="UTF-8"?>
<configs>
  <!-- Reduce almost all demolition zombies from the feral horde stages! Will add back later some other way.. -->
  <remove xpath="/entitygroups/entitygroup[starts-with(@name, 'feralHordeStageGS')]/entity[@name='zombieDemolition']" />
  <append xpath="/entitygroups/entitygroup[starts-with(@name, 'feralHordeStageGS')]">
    <entity name="zombieDemolition" prob="0.01" />
  </append>

  <!-- Add some random chance to get demolishers in sleeper cells. -->
  <append xpath="/entitygroups/entitygroup[starts-with(@name, 'sleeperHordeStageGS')]/entity[@name='zombieDemolition']">
    <entity name="zombieDemolition" prob="0.05" />
  </append>

  <!-- Adjust maximum health for the demolition zombie. -->
  <set xpath="/entity_classes/entity_class[@name='zombieDemolition']/effect_group[@name='Base Effects']/passive_effect[@name='HealthMax' and @operation='base_set']/@value">300</set>

  <!-- Nerf the block damage. -->
  <set xpath="/entity_classes/entity_class[@name='zombieDemolition']/property[@name='Explosion.BlockDamage']/@value">2000</set>
  <set xpath="/entity_classes/entity_class[@name='zombieDemolition']/property[@name='Explosion.DamageBonus.earth']/@value">.05</set>

  <!-- Slow down this zombie, becauase all of its heavy armor shouldn't allow it to move so fast anyway. -->
  <append xpath="/entity_classes/entity_class[@name='zombieDemolition']">
    <property name="MoveSpeedAggro" value=".15, .2" />
  </append>
</configs>
