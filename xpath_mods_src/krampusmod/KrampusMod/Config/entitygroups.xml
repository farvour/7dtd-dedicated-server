<?xml version="1.0" encoding="UTF-8"?>
<configs>
  <remove xpath="/entitygroups/entitygroup[@name='ZombiesAll']" />
  <append xpath="/entitygroups">
    <entitygroup name="ZombiesAll">
      zombieBoe
      zombieJoe
      zombieSteve
      zombieTomClark
      zombieMoe
      zombieYo
      zombieBusinessMan
      zombieArlene
      zombieDarlene
      zombieDemolition, .1
      zombieFatCop, .1
      zombieMaleHazmat, .1
      zombieMarlene
      zombieSkateboarder
      zombieBiker, .3
      zombieUtilityWorker, .3
      zombieJanitor, .2
      zombieNurse, .3
      zombieSteveCrawler, .2
      zombieFatHawaiian, .3
    </entitygroup>
  </append>

  <!-- Add demolishers to the wandering hordes. -->
  <csv xpath="/entitygroups/entitygroup[starts-with(@name, 'wanderingHordeStage')]" op="Add">
    zombieDemolition, .1
  </csv>
  <csv xpath="/entitygroups/entitygroup[starts-with(@name, 'FwanderingHordeStage')]" op="Add">
    zombieDemolition, .1
  </csv>

  <!-- Add some random chance to get demolishers in sleeper cells. -->
  <csv xpath="/entitygroups/entitygroup[starts-with(@name, 'sleeperHordeStageGS')]" op="Add">
    zombieDemolition, .2
  </csv>

  <!-- Remove vultures from wandering hordes. -->
  <csv xpath="/entitygroups/entitygroup[starts-with(@name, 'wanderingHordeStage')]" op="Remove">
    animalZombieVulture*
    animalZombieVultureRadiated*
  </csv>

  <!-- Replace vultures with crawlers most of the time. -->
  <remove xpath="/entitygroups/entitygroup[@name='VultureGroup']" />
  <append xpath="/entitygroups">
    <entitygroup name="VultureGroup">zombieSteveCrawler</entitygroup>
  </append>
</configs>
