<?xml version="1.0" encoding="UTF-8"?>
<configs>
  <!-- Dynamite is fun, but let's make it even more fun. -->
  <set xpath="/items/item[@name='thrownDynamite']/property[@name='Explosion.RadiusBlocks']/@value">15</set>
  <set xpath="/items/item[@name='thrownDynamite']/property[@name='Explosion.RadiusEntities']/@value">20</set>
  <set xpath="/items/item[@name='thrownDynamite']/effect_group/passive_effect[@name='BlockDamage']/@value">15000</set>
  <set xpath="/items/item[@name='thrownDynamite']/effect_group/passive_effect[@name='EntityDamage']/@value">2000</set>
  <set xpath="/items/item[@name='thrownDynamite']/effect_group/display_value[@name='dExRadius']/@value">15</set>

  <!-- Large 7.62 ammo stacks. -->
  <set xpath="/items/item[starts-with(@name, 'ammo762mmBullet') and not (starts-with(@name, 'ammoBundle'))]/property[@name='Stacknumber']/@value">1000</set>

  <!-- Large 9mm ammo stacks. -->
  <set xpath="/items/item[starts-with(@name, 'ammo9mmBullet') and not (starts-with(@name, 'ammoBundle'))]/property[@name='Stacknumber']/@value">1000</set>
</configs>
